{
  "manifest_version": 3,
  "name": "My Dev Notes",
  "version": "1.1",
  "description": "Stockez et organisez vos notes de d√©veloppement.",
  "permissions": [
      "storage",
      "contextMenus",
      "scripting",
      "activeTab"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png"
      }
  },
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
  },
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "js": [
              "content.js"
          ]
      }
  ],
  "web_accessible_resources": [
      {
          "resources": [
              "prism.js"
          ],
          "matches": [
              "<all_urls>"
          ]
      }
  ]
}